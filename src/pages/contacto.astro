---
import BaseLayout from "../layouts/BaseLayout.astro";
import { FormContact } from "../components/FormContact";
import ContactWA from "../components/ContactWhatsApp.astro";
---

<BaseLayout title="Contacto - ProyectoSweb Damián V.N.">
  <h5 class="text-center pb-2 p-important">Agenda una reunión conmigo:</h5>
  <!-- Principio del widget integrado de Calendly -->
  <script
    type="text/javascript"
    src="https://assets.calendly.com/assets/external/widget.js"
    async></script>
  <div
    class="calendly-inline-widget px-2 rounded"
    data-url="https://calendly.com/dvnegrete?hide_gdpr_banner=1"
    style="min-width:320px;height:700px;"
  >
  </div>
  <!-- Final del widget integrado de Calendly -->

  <FormContact client:visible />

  <ContactWA />
</BaseLayout>
