---
import "../styles/global.css";
import { iconPaths } from "../components/IconPaths";
import Icon from "../components/Icon.astro";

interface Props {
  title?: string | undefined;
  subtitle?: string | undefined;
}

const {
  title = "Sitios web y aplicaciones a medida para negocios y escuelas en México y Latinoamérica",
  subtitle = "¿Necesitas un sitio web o una aplicación para tu negocio o institución? Te ayudo a construirlo: desde el diseño hasta publicarlo en internet. Trato directo con el desarrollador, sin intermediarios.",
} = Astro.props;

const textFront:{ title: string; description: string; icon: keyof typeof iconPaths }[] = [
  {
    icon: "trophy",
    title: "Presencia Online",
    description:
      "Sitios web diseñados a medida que reflejan la identidad de tu negocio y funcionan en cualquier dispositivo.",
  },
  {
    icon: "cloud",
    title: "Soluciones en la nube",
    description:
      "Implementación en Google Cloud Platform, Amazon Web Services o Microsoft Azure para que tu proyecto escale con seguridad y disponibilidad.",
  },
  {
    icon: "code",
    title: "Aplicaciones web a medida",
    description:
      "Desde un sistema de inscripciones hasta un panel de administración: construyo la funcionalidad que tu negocio necesita.",
  },
  {
    icon: "rocket-launch",
    title: "Mantenimiento",
    description:
      "Mantén tu sitio web y aplicaciones en su mejor estado con mi servicio de soporte, actualizaciones y optimización continua.",
  },
];
---

<section>
  <div class="max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8 lg:py-16">
    <div class="max-w-xl">
      <h2 class="text-3xl font-bold sm:text-4xl section-title">{title}</h2>

      <p class="mt-4">
        {subtitle}
      </p>
    </div>
    <div
      class="mt-8 grid grid-cols-1 gap-8 md:mt-16 md:grid-cols-2 md:gap-12 lg:grid-cols-3"
    >
      {
        textFront.map((item) => (
          <div class="flex items-start gap-4">
            <span class="shrink-0 rounded-lg icons">
              <Icon icon={item.icon}/>
            </span>

            <div>
              <h2 class="text-lg font-bold">{item.title}</h2>

              <p class="mt-1 text-sm">{item.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  section {
    color: var(--gray-200);
  }
  .section-title {
    color: var(--gray-0);
  }
  .icons {
    color: var(--accent-dark);
    transition: color var(--theme-transition);
    padding: var(--icon-padding);
  }
  .icons:hover,
  .icons:focus {
    color: var(--accent-text-over);
  }
</style>
